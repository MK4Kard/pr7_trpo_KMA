<Window x:Class="pr7_trpo_1_KMA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr7_trpo_1_KMA"
        mc:Ignorable="d"
        Style="{StaticResource Main}"
        Title="Окно приема пациента">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Style="{StaticResource RowTop}"/>
            <RowDefinition Style="{StaticResource RowMax}"/>
        </Grid.RowDefinitions>
        <StackPanel Style="{StaticResource HorSPL}">
            <Menu>
                <MenuItem Header="Меню">
                    <MenuItem Header="Настройки">
                        <MenuItem Header="Сменить тему"
                                  Click="ChangeTheme_Click"/>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
