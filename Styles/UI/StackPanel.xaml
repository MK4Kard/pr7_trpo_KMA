<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="StackPanel" x:Key="BottomSP" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>
    <Style TargetType="StackPanel" x:Key="HorSP" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="StackPanel" x:Key="HorSPL" BasedOn="{StaticResource HorSP}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>