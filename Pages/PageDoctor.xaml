<Page x:Class="pr7_trpo_1_KMA.Pages.PageDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      d:Width="800" d:Height="600"
      Title="Прием">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource MinCol}"/>
            <ColumnDefinition Style="{StaticResource MaxCol2}"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Style="{StaticResource RowTop}"/>
            <RowDefinition Style="{StaticResource RowBttm}"/>
            <RowDefinition Style="{StaticResource RowTop}"/>
            <RowDefinition Style="{StaticResource RowTop}"/>
        </Grid.RowDefinitions>
        <Button Content="Назад" Click="BackClick" Grid.Row="0"/>
        <Grid x:Name="docInfo" Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource MinCol2}"/>
                <ColumnDefinition Style="{StaticResource MinCol2}"/>
            </Grid.ColumnDefinitions>
            <Label Content="Данные" Grid.ColumnSpan="2" Style="{StaticResource Top}"/>
            <StackPanel Grid.Column="0">
                <Label Content="id"/>
                <Label Content="Фамилия"/>
                <Label Content="Имя"/>
                <Label Content="Отчество"/>
                <Label Content="Специальность"/>
                <Label Content="Пароль"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="{Binding Id, Mode=OneWay}"/>
                <Label Content="{Binding Name, Mode=OneWay}"/>
                <Label Content="{Binding LastName, Mode=OneWay}"/>
                <Label Content="{Binding MiddleName, Mode=OneWay}"/>
                <Label Content="{Binding Specialisation, Mode=OneWay}"/>
                <Label Content="{Binding Password, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RowTop}"/>
                <RowDefinition Style="{StaticResource RowTop}"/>
                <RowDefinition Style="{StaticResource RowBottom}"/>
            </Grid.RowDefinitions>
            <Label Content="Список пациентов" Grid.Row="0" Style="{StaticResource Top}"/>
            <StackPanel Grid.Row="1" Style="{StaticResource HorSP}">
                <Button Content="Создать пациента" Click="CreatePac" Style="{StaticResource AddBtn}"/>
                <Button Content="Начать приём" Click="Start" Style="{StaticResource AppBtn}"/>
                <Button Content="Изменить информацию" Click="RePacient" Style="{StaticResource AppBtn}"/>
            </StackPanel>
            <ListView Grid.Row="2"
                      ItemsSource="{Binding Pacients}"
                      SelectedItem="{Binding SelectedPacient}" Style="{StaticResource MiniList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Style="{StaticResource HorSPL}">
                                <TextBlock Text="id: "/>
                                <TextBlock Text="{Binding IdP}"/>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorSPL}">
                                <TextBlock Text="Фамилия: "/>
                                <TextBlock Text="{Binding NameP}"/>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorSPL}">
                                <TextBlock Text="Имя: "/>
                                <TextBlock Text="{Binding LastNameP}"/>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorSPL}">
                                <TextBlock Text="Отчество: "/>
                                <TextBlock Text="{Binding MiddleNameP}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Button Grid.Column="1" Grid.Row="2" Content="Удалить" Click="Delete" Style="{StaticResource DeleteBtn}"/>
        <DockPanel Grid.Row="3" Grid.ColumnSpan="2" x:Name="info">
            <Label Style="{StaticResource Info}" Content="Количество файлов:"/>
            <Label Style="{StaticResource Info}" Content="{Binding CountAll, Mode=OneWay}"/>
            <Label Style="{StaticResource Info}" Content="Количество пользователей:"/>
            <Label Style="{StaticResource Info}" Content="{Binding CountD, Mode=OneWay}"/>
            <Label Style="{StaticResource Info}" Content="Количество пациентов:"/>
            <Label Style="{StaticResource Info}" Content="{Binding CountP, Mode=OneWay}"/>
        </DockPanel>
    </Grid>
</Page>
