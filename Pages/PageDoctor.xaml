<Page x:Class="pr7_trpo_1_KMA.Pages.PageDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      WindowHeight="420" WindowWidth="635"
      Height="350" Width="615"
      Title="Прием" Background="WhiteSmoke">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid x:Name="docInfo" Grid.Column="0" Margin="10 10 0 10" Background="#FFECECEC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Данные" Grid.ColumnSpan="2"/>
            <StackPanel Grid.Column="0">
                <Label Content="id"/>
                <Label Content="Фамилия"/>
                <Label Content="Имя"/>
                <Label Content="Отчество"/>
                <Label Content="Специальность"/>
                <Label Content="Пароль"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="{Binding Id, Mode=OneWay}"/>
                <Label Content="{Binding Name, Mode=OneWay}"/>
                <Label Content="{Binding LastName, Mode=OneWay}"/>
                <Label Content="{Binding MiddleName, Mode=OneWay}"/>
                <Label Content="{Binding Specialisation, Mode=OneWay}"/>
                <Label Content="{Binding Password, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Margin="10 10 10 10" Background="#FFECECEC">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Список пациентов" Grid.Row="0"/>
            <StackPanel Grid.Row="1">
                <Button Content="Создать пациента" Click="CreatePac"/>
                <Button Content="Начать приём" Click="Start"/>
                <Button Content="Изменить информацию" Click="RePacient"/>
            </StackPanel>
            <ListView Grid.Row="2"
                      ItemsSource="{Binding Pacients}"
                      SelectedItem="{Binding SelectedPacient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Text="id: "/>
                                <TextBlock Text="{Binding IdP}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Фамилия: "/>
                                <TextBlock Text="{Binding NameP}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Имя: "/>
                                <TextBlock Text="{Binding LastNameP}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Отчество: "/>
                                <TextBlock Text="{Binding MiddleNameP}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <DockPanel Grid.Row="2" Grid.ColumnSpan="2">
            <Label Content="Количество файлов:"/>
            <Label x:Name="Count" Content="0"/>
            <Label Content="Количество пользователей:"/>
            <Label x:Name="CountD" Content="0"/>
            <Label Content="Количество пациентов:"/>
            <Label x:Name="CountP" Content="0"/>
        </DockPanel>
    </Grid>
</Page>
