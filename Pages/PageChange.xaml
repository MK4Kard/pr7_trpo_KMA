<Page x:Class="pr7_trpo_1_KMA.Pages.PageChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      WindowHeight="340" WindowWidth="520"
      Height="260" Width="500"
      Title="Изменение данных">

    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Фамилия" VerticalAlignment="Center"/>
            <Label Content="Имя" VerticalAlignment="Center"/>
            <Label Content="Отчество" VerticalAlignment="Center"/>
            <Label Content="Дата рождения" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding NameP, Mode=TwoWay}" Margin="4" VerticalAlignment="Center"/>
            <TextBox Text="{Binding LastNameP, Mode=TwoWay}" Margin="4" VerticalAlignment="Center"/>
            <TextBox Text="{Binding MiddleNameP, Mode=TwoWay}" Margin="4" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding BirthDay, Mode=TwoWay}" Margin="4 1 4 1" VerticalAlignment="Center" DisplayDateStart="1990-01-01" DisplayDateEnd="2026-01-01"/>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <Button Margin="4" Content="Вернуть" Grid.ColumnSpan="2" Click="ButtonBack"/>
            <Button Margin="4" Content="Сохранить" Grid.ColumnSpan="2" Click="ButtonSave"/>
        </StackPanel>
    </Grid>
</Page>
