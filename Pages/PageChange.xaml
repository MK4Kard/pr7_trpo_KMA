<Page x:Class="pr7_trpo_1_KMA.Pages.PageChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      d:Width="800" d:Height="500"
      Title="Изменение данных">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Style="{StaticResource RowTop}"/>
            <RowDefinition Style="{StaticResource RowBottMax}"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource MinCol}"/>
            <ColumnDefinition Style="{StaticResource MaxCol2}"/>
        </Grid.ColumnDefinitions>
        <Button Content="Назад" Click="BackClick"/>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label Content="Фамилия"/>
            <Label Content="Имя"/>
            <Label Content="Отчество"/>
            <Label Content="Дата рождения"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBox Text="{Binding NameP, Mode=TwoWay}"/>
            <TextBox Text="{Binding LastNameP, Mode=TwoWay}"/>
            <TextBox Text="{Binding MiddleNameP, Mode=TwoWay}"/>
            <DatePicker SelectedDate="{Binding BirthDay, Mode=TwoWay}"/>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Style="{StaticResource BottomSP}">
            <Button Content="Вернуть" Grid.ColumnSpan="2" Click="ButtonBack"/>
            <Button Content="Сохранить" Grid.ColumnSpan="2" Click="ButtonSave"/>
        </StackPanel>
    </Grid>
</Page>
