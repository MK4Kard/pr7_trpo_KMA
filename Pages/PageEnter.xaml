<Page x:Class="pr7_trpo_1_KMA.Pages.PageEnter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      WindowHeight="270" WindowWidth="170"
      Height="200" Width="150"
      Title="Вход в приложение" Background="WhiteSmoke">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Id"/>
        <TextBox Text="{Binding Id}" Grid.Row="0"/>
        <Label Grid.Row="1" Content="Пароль"/>
        <TextBox Text="{Binding Password}" Grid.Row="1"/>
        <Button Grid.Row="2" Click="ButtonEnter">Войти</Button>
        <Button Grid.Row="2" Content="Регистрация" Click="EnterReg"/>
    </Grid>
</Page>
