<Page x:Class="pr7_trpo_1_KMA.Pages.PageEnter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7_trpo_1_KMA.Pages"
      mc:Ignorable="d" 
      d:Width="800" d:Height="500"
      Title="Вход в приложение">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Style="{StaticResource RowBottom}"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Id"/>
        <TextBox Text="{Binding Id}" Grid.Row="0" Style="{StaticResource BottomTextBox}"/>
        <Label Grid.Row="1" Content="Пароль"/>
        <TextBox Text="{Binding Password}" Grid.Row="1" Style="{StaticResource BottomTextBox}"/>
        <StackPanel Grid.Row="2" Style="{StaticResource BottomSP}">
            <Button Click="ButtonEnter">Войти</Button>
            <Button Content="Регистрация" Click="EnterReg" Style="{StaticResource BottomBtn}"/>
        </StackPanel>
    </Grid>
</Page>
